<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Etiqueta flotante-->
    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/letra_negra</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Campo de texto-->
    <style name="EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/letra_azul</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/fondo_inicio</item>
    </style>
    <style name="EditTextError" parent="TextAppearance.AppCompat.Caption"
        >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor"> @color/letra_azul</item>
    </style>

    <!-- estilos para cajas de  texto de numero -->
    <style name="EditTextCounter" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/letra_negra</item>
    </style>

    <style name="EditTextCounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">#FF7043</item>
    </style>


    <style name="estilo_boton_iniciar">
        <item name="android:background">@drawable/boton_estilo_iniciar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
